{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "lib": [
            "es2015",
            "dom"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "utils/",
        "requests/"
    ]
}