{
  "name": "nodejs-automation-kit",
  "version": "1.0.0",
  "description": "This is the kit for all automation test frameworks using Nodejs libraries",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "test:web": "npm --prefix frameworks/web-playwright run test",
    "test:web:android": "npm --prefix frameworks/web-playwright run test:android",
    "test:web:ios": "npm --prefix frameworks/web-playwright run test:ios", 
    "test:api": "npm --prefix frameworks/api-playwright run test",
    "test:mobile:android": "npm --prefix frameworks/mobile-wdio run test:android",
    "test:mobile:ios": "npm --prefix frameworks/mobile-wdio run test:ios"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "prettier": "^3.7.2",
    "typescript": "^5.9.3"
  }
}
